{
  "family": "ecommerce-checkout-service",
  "networkMode": "awsvpc",
  "executionRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "checkout-service",
      "image": "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/ecommerce-checkout-service:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 5002,
          "hostPort": 5002,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "PORT",
          "value": "5002"
        },
        {
          "name": "ORDER_API",
          "value": "http://${ALB_DNS_NAME}/api/orders"
        },
        {
          "name": "CART_API",
          "value": "http://${ALB_DNS_NAME}/api/cart"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/ecommerce-checkout-service",
          "awslogs-region": "${AWS_REGION}",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ],
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512"
}